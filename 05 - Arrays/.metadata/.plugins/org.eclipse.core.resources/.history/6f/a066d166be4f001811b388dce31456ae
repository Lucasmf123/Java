package exercicio06;

import javax.swing.JOptionPane;

public class Ex06 {

	public static void main(String[] args) {

		// Variáveis
		String[][] dados = new String[3][5];
		dados[0][1] = " | ";
		dados[0][3] = " | ";
		dados[2][1] = " | ";
		dados[2][3] = " | ";
		dados[3][1] = " | ";
		dados[3][3] = " | ";
		String texto = "";
		String j1 = "";
		String j2 = "";
		
		// Laço
		for (int l = 0; l < 3; l++) {
			
			for (int c = 0; c < 5; c++) {
					
				//Obtendo X e O
				j1 = JOptionPane.showInputDialog("Informe Que jogador você é.\n\nJogador 1 = X\n\nJogador 2 = O");
				
				if(j1 == "Jogador 1") {
					j1 = "X";
				}else {
					j1 = "X";
					j2 = "O";
				}
			}
		}

	}

}
