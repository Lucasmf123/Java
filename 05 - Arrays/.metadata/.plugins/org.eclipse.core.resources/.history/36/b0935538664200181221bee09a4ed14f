package exercicio01;

import javax.swing.JOptionPane;

public class ex01 {

	public static void main(String[] args) {
	
		//Vetor #1
		int[] primeirosnumeros = new int[10];
		int[] segundosnumeros = new int[10];
		int indice = 0;
		String operacao = null;
		
		//Obtendo operação
		operacao = JOptionPane.showInputDialog(null, "Informe a operação");
		
		segundosnumeros[0] = Integer.parseInt(JOptionPane.showInputDialog("Informe os 10 últimos números"));
	
		//Laço
		while (indice <10) {
			primeirosnumeros[indice] = Integer.parseInt(JOptionPane.showInputDialog("Informe os 10 primeiros números"));
			indice++;
		}
		
		
	
	}

}
